<div class="container" style="margin-left:50px;">
  <div class="mt-5 ml-5 pl-1">
    <h4 class="text-center" style="background-color: #dcdcdc; width: 17%; font-size:23px;">配送先編集</h4>
  </div>

  <%= form_with model: @address, url:address_path(@address),method: :patch do |f| %>
    <div class="row" style="margin-top:50px;">
      <div class="col-md-2" style="font-size:15px; padding-top:5px;"><%= f.label :郵便番号 %><em>(ハイフンなし)</em></div>
      <div class="col-md-10"><%= f.text_field :postal_code,placeholder:"0000000",style:"width:280px; height:35px;"%></div>
    </div>

    <div class="row" style="margin-top:10px;">
      <div class="col-md-2" style="padding-top:5px;"><%= f.label :住所 %></div>
      <div class="col-md-10"><%= f.text_field :address,placeholder:"東京都渋谷区余予備神園町0-0",style:"width:660px; height:35px;"%></div>
    </div>

    <div class="row" style="margin-top:10px;">
      <div class="col-md-2" style="font-size:15px; padding-top:5px;"><%= f.label :宛名 %></div>
      <div class="col-md-7"><%= f.text_field :name,placeholder:"令和道子",style:"width:200px; height:35px;"%></div>
      <div class="col-md-3"><%= f.submit '変更内容を保存',class:"btn btn-success text-light",style:"width:55%;"%></div>
    </div>
    
  <% end %>
</div>