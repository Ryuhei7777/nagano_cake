<div class="container">
  <div class="mt-5 ml-5 pl-1">
    <h4 class="text-center" style="background-color: #dcdcdc; width: 17%; font-size:23px;">会員情報編集</h4>
  </div>
  <%= form_with model: @customer, url:customers_path, method: :patch do |f| %>
  <div class="row" style="margin-top:50px;">
    <div class="col-md-2" style="padding-top:5px;"><%= f.label :氏名 %></div>
    <div class="col-md-2" style="padding-right:0px;"><%= f.text_field :first_name,style:"width:200px; height:35px;"%></div>
    <div class="col-md-8" style="padding-left:70px;"><%= f.text_field :last_name,style:"width:200px; height:35px;"%></div>
  </div>
      
  <div class="row" style="margin-top:10px;">
    <div class="col-md-2" style="padding-top:5px;"><%= f.label :フリガナ %></div>
    <div class="col-md-2"><%= f.text_field :first_name_kana,style:"width:200px; height:35px;"%></div>
    <div class="col-md-8" style="padding-left:70px;"><%= f.text_field :last_name_kana,style:"width:200px; height:35px;"%></div>
  </div>
  
  <div class="row" style="margin-top:10px;">
    <div class="col-md-2" style="font-size:15px; padding-top:5px;"><%= f.label :郵便番号 %></div>
    <div class="col-md-10"><%= f.text_field :postal_code,style:"width:200px; height:35px;"%></div>
  </div>
  
  <div class="row" style="margin-top:10px;">
    <div class="col-md-2" style="padding-top:5px;"><%= f.label :住所 %></div>
    <div class="col-md-10"><%= f.text_field :address,style:"width:660px; height:35px;"%></div>
  </div>
  
  <div class="row" style="margin-top:10px;">
    <div class="col-md-2" style="font-size:15px; padding-top:5px;"><%= f.label :電話番号 %></div>
    <div class="col-md-10"><%= f.text_field :telephone_number,style:"width:200px; height:35px;"%></div>
  </div>
  
  <div class="row" style="margin-top:10px;">
    <div class="col-md-2" style="padding-top:5px;"><%= f.label :メールアドレス %></div>
    <div class="col-md-10"><%= f.email_field :email, autofocus: true, autocomplete: "email",style:"width:200px; height:35px;"%></div>
  </div>
 
  <div class="row" style="margin-top:20px;">
    <div class="col-md-2" style="font-size:15px; padding-top:5px;"></div>
    <div class="col-md-4"><%= f.submit "編集内容を保存",class:"btn btn-success text-light",style:"width:250px; height:35px;"%></div>
    <div class="col-md-4"><span style="margin-right:52px;"></span><%= link_to "退会する",withdraw_check_path,class:"btn btn-danger text-light",style:"width:130px; height:35px;"%></div>
  </div>
  
  <% end %>
</div> 

