<h4>管理者ログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  
  <div class="row row-cols-2">
    <div class="col-4">
      <%= f.label :"メールアドレス" %><br />
    </div>
    
    <div class="col-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
    </div>
    
  </div>
  
  <div class="row row-cols-2">
    <div class="col-2">
    <%= f.label :"パスワード" %><br />
    </div>
    
    <div class="col-6">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    
  </div>
  
</div>

<div class="actions">
  <%= f.submit "ログイン" ,class:"btn btn-primary w-10 text-light" %>
</div>

<% end %>
<% render "admin/shared/links" %>
