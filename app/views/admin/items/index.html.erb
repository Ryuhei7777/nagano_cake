<div class="container">
  <div class="mt-5 ml-5 pl-3">
    <h4 class="text-center" style="background-color: #dcdcdc; width: 15%;">商品一覧</h4>
  </div>
  <div class="row">
    <div class="col-md-11 ml-5 mt-5">
      <table class="table">
        <tr　class="border-top",>
          <th bgcolor="#f5f5f5", style="width:15%" class="pl-3">商品ID</th>
          <th bgcolor="#f5f5f5", style="width:30%" class="pl-3">商品名</th>
          <th bgcolor="#f5f5f5", style="width:15%" class="pl-3">税抜価格</th>
          <th bgcolor="#f5f5f5", style="width:25%" class="pl-3">ジャンル</th>
          <th bgcolor="#f5f5f5", style="width:15%" class="pl-3">ステータス</th>
        </tr>

        <% @items.each do |item|%>
          <% if item.is_active ==true %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name%></td>
            <td><strong style="color:#3cb371;">販売中</strong></td>
          </tr>
          <% else%>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name%></td>
            <td><strong style="color: #808080;">販売停止中</strong></td>
          </tr>
          <% end %>
        <% end %>
      </table>
      </div>
    </div>

    <div style="margin-left: 45%;">
    <%= paginate @items %>
    </div>

  </div>
</div>
