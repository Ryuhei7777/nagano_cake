<div class="container">
  <div class="d-flex flex-row mt-5 ml-2">
    <h4 class="text-center" style="background-color: #dcdcdc; width: 30%;"><%= (@customer.first_name + @customer.last_name) %>さんの会員詳細</h4>
  </div>
  
  <div class="row" style="margin-top:30px">
    <div class="col-2">
      <span style="font-size:17px;">会員ID</span>
    </div>
    <div class="col-10">
      <span style="font-size: 17px;"><%= @customer.id %></span>
    </div>
  </div>

  <div class="row" style="margin-top: 20px;">
    <div class="col-2" >
      <span style="font-size:17px;">氏名</span>
    </div>
    <div class="col-10">
      <span class="text-break" style="font-size: 17px;"><%= @customer.first_name %><span style="margin-left:15px;"></span><%= @customer.last_name %></span>
    </div>
  </div>

  <div class="row" style="margin-top: 20px;">
    <div class="col-2">
      <span style="font-size:17px;">フリガナ</span>
    </div>
    <div class="col-10">
      <span style="font-size: 17px;"><%= @customer.first_name_kana %><span style="margin-left:15px;"></span><%= @customer.last_name_kana %></span>
    </div>
  </div>

  <div class="row" style="margin-top: 20px;">
    <div class="col-2">
      <span style="font-size:17px;">郵便番号</span>
    </div>
    <div class="col-10">
      <span style="font-size: 17px;"><%= @customer.postal_code %></span>
    </div>
  </div>

  <div class="row" style="margin-top: 20px;">
    <div class="col-2">
      <span style="font-size:17px;">住所</span>
    </div>
    <div class="col-10">
      <span style="font-size: 17px;"><%= @customer.address %></span>
    </div>
  </div>

  <div class="row" style="margin-top: 20px;">
    <div class="col-2">
      <span style="font-size:17px;">電話番号</span>
    </div>
    <div class="col-10">
      <span style="font-size: 17px;"><%= @customer.telephone_number %></span>
    </div>
  </div>

  <div class="row" style="margin-top: 20px;">
    <div class="col-2">
      <span style="font-size:17px;">メールアドレス</span>
    </div>
    <div class="col-10">
      <span style="font-size: 17px;"><%= @customer.email %></span>
    </div>
  </div>

  <div class="row" style="margin-top: 20px;">
    <div class="col-2">
      <span style="font-size:17px;">会員ステータス</span>
    </div>
    <div class="col-10">
      <% if @customer.is_deleted ==true %>
        <strong style="color: #808080; font-size: 20px;">無効</strong>
      <% else%>
        <strong style="color:#3cb371; font-size: 20px;">有効</strong>
      <% end %>
    </div>
  </div>


  <div class="row">
    <div class="col-md-2" style="margin-left:190px;">
      <%= link_to "編集する", edit_admin_customer_path(@customer),class:"btn btn-success text-light mr-5 mt-4 ",style:"width:100px;" %>
    </div>
    <div class="col-md-3">
      <%= link_to "注文履歴一覧を見る", admin_root_path,class:"btn btn-primary text-light mr-5 mt-4 ",style:"width:180px;" %>
    </div>
  </div>
  
</div>