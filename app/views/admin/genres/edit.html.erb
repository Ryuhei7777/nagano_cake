<div class="container">
  <div class="mt-5">
    <h4 class="text-center" style="background-color: #d3d3d3; width: 18%;">ジャンル編集</h4>
  </div>
    <div class="col-md-6 mt-5">
      <%= form_with model: @genre, url:admin_genre_path(@genre), method: :patch  do |f|%>
      <span>ジャンル名</span>
      <%= f.text_field :name,class:"ml-5"%>
      <%= f.submit '変更を保存',class:"btn btn-success w-25 text-light ml-5"  %>
      <% end %>
    </div>
  </div>
</div>