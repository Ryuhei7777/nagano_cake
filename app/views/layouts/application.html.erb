<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if admin_signed_in? %>
    <container>
      <div class="d-flex flex-row">
        <div class="col-4">NAGANO_CAKEへようこそ </div>
        <div class="col-8 d-flex flex-row">
          <li class="col-2"><%= link_to "商品一覧",admin_items_path,class:"btn btn-success text-light",style:"width:80%;"%></li>
          <li class="col-2"><%= link_to "会員一覧",admin_customers_path,class:"btn btn-success text-light",style:"width:80%;"%></li>
          <li class="col-2"><%= link_to "注文履歴一覧",admin_root_path,class:"btn btn-success text-light",style:"width100%; font-size:15px; height:37px;"%></li>
          <li class="col-2"><%= link_to "ジャンル一覧",admin_genres_path,class:"btn btn-success text-light",style:"width:100%; font-size:15px; height:37px;"%></li>
          <li class="col-2"><%= link_to "ログアウト",destroy_admin_session_path,method: :delete,class:"btn btn-success text-light",style:"width:90%;"%></li>
        </div>
      </div>

    <% elsif customer_signed_in? %>
      <header>
        <div><%= link_to "NAGANO_CAKEへようこそ",root_path %></div>
        <div>
          <div><%= link_to "マイページ",customers_path,class:"btn btn-success text-light",style:"width:7%;"%></div>
          <div><%= link_to "商品一覧",items_path,class:"btn btn-success text-light",style:"width:7%;"%></div>
          <div><%= link_to "カート",cart_items_path,class:"btn btn-success text-light",style:"width:7%;"%></div>
          <div><%= link_to "ログアウト",destroy_customer_session_path,method: :delete,class:"btn btn-success text-light",style:"width:7%;"%></div>
        </div>
      </header>

    <% else %>
      <header>
        <div><%= link_to "NAGANO_CAKEへようこそ",root_path %></div>
        <div>
          <div><%= link_to "About",public_about_path,class:"btn btn-success text-light",style:"width:7%;"%></div>
          <div><%= link_to "商品一覧",items_path,class:"btn btn-success text-light",style:"width:7%;"%></div>
          <div><%= link_to "新規登録",new_registration_path,class:"btn btn-success text-light",style:"width:7%;"%></div>
          <div><%= link_to "ログイン",new_customer_session_path,class:"btn btn-success text-light",style:"width:7%;"%></div>
        </div>
      </header>
    </container>
    <% end %>

    <div>
      <%= yield %>
    </div>

    <footer>

    </footer>
  </body>
</html>
